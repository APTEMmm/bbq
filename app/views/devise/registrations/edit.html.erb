<div class="card">
  <h2 class="card-header"><%= I18n.t('title.form.edit_profile') %></h2>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :email %><br/>
        <%= f.email_field :email, class: 'form-control', placeholder: 'name@example.com', autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= I18n.t('form_text.password_validation') %> )</em>
        <% end %>
        <%= f.password_field :password, class: 'form-control', placeholder: I18n.t('form_text.leave_blank'), autocomplete: "new-password" %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation %><br/>
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
      </div>

      <div class="field form-group">
        <%= f.label :current_password %><br/>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit I18n.t('buttons.update'), class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div><br/>

<div class="card">
  <h4 class="card-header"><%= I18n.t('title.form.cancel_account') %></h4>
  <div class="card-body">
    <h5 class="card-title"><%= I18n.t('form_text.unhappy?') %></h5>
    <p class="card-text"><%= button_to I18n.t('buttons.cancel_account'), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>
  </div>
</div><br/>

<%= link_to I18n.t('buttons.back'), :back %>
